<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Competidores:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_kata_competitor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Competidor 1"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#E3F2FD"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_kata_competitor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Competidor 2"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#FFF3E0"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÃºmero de jueces:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/et_num_judges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="3, 5 o 7"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificar competidores:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_judge_comp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificar Competidor 1"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#2196F3" />

    <Button
        android:id="@+id/btn_judge_comp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificar Competidor 2"
        android:backgroundTint="#FF9800" />

</LinearLayout>
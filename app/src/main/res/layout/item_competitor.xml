<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen del cinturón -->
        <ImageView
            android:id="@+id/iv_belt_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_belt_white"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="Icono de cinturón" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_competitor_folio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Folio: BL-JUA-15-KA"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_competitor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre: Juan Pérez"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_competitor_dojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dojo: Dojo Central"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_competitor_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edad: 15" />

                <TextView
                    android:id="@+id/tv_competitor_belt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cinturón: Blanco" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_competitor_participation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participa en: Kata"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
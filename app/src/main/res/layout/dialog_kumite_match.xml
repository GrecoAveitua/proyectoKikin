<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Configuración del combate -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuración del Combate"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/et_match_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Tiempo (segundos)"
                android:inputType="number"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/et_score_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Límite de puntaje"
                android:inputType="number" />

        </LinearLayout>

        <!-- Temporizador -->
        <TextView
            android:id="@+id/tv_kumite_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02:00"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#1A237E"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_start_stop_timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iniciar"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_add_5_sec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+5 seg"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_subtract_5_sec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-5 seg"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Competidor 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_kumite_comp1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Competidor 1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_kumite_comp1_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btn_comp1_ippon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ippon\n(3)"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_comp1_wazari"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wazari\n(2)"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_comp1_yuko"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yuko\n(1)"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_comp1_foul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FALTA"
                android:backgroundTint="#F44336" />

        </LinearLayout>

        <!-- Competidor 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_kumite_comp2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Competidor 2"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_kumite_comp2_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#F57C00"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btn_comp2_ippon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ippon\n(3)"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#FF9800" />

                <Button
                    android:id="@+id/btn_comp2_wazari"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wazari\n(2)"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#FF9800" />

                <Button
                    android:id="@+id/btn_comp2_yuko"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yuko\n(1)"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FF9800" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_comp2_foul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FALTA"
                android:backgroundTint="#F44336" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_finish_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINALIZAR COMBATE"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50" />

    </LinearLayout>

</ScrollView>

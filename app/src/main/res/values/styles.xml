<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#1A237E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FF6F00</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1A237E</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Card Styles -->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>